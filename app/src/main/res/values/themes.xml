<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.VideoDownloader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_item_primary</item>
        <item name="colorPrimaryVariant">@color/color_item_primary</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <item name="colorSecondary">@color/color_item_primary</item>
        <item name="colorSecondaryVariant">@color/color_item_primary</item>
        <item name="colorOnSecondary">@color/color_item_primary</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:statusBarColor">@color/color_white</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="Theme.VideoPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    //for dialog
    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
    </style>

    <attr name="themeColor" format="color"/>

    //custom theme
    <style name="coolPinkNav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="themeColor">@color/cool_pink</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">?attr/themeColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">?attr/themeColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/themeColor</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
