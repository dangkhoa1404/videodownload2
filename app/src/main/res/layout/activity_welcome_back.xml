<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenes.welcomeback.activity.WelcomeBackActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieViewSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anim_welcomeback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_rubik_medium"
        android:text="@string/txt_welcome_back"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintBottom_toBottomOf="@+id/lottieViewSplash"
        app:layout_constraintEnd_toEndOf="@+id/lottieViewSplash"
        app:layout_constraintStart_toStartOf="@+id/lottieViewSplash" />

</androidx.constraintlayout.widget.ConstraintLayout>