<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/color_item_primary" />
            <size android:width="@dimen/_14sdp" android:height="@dimen/_14sdp" />
            <stroke android:width="@dimen/_5sdp" android:color="@color/color_trans" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/color_black" />
            <size android:width="@dimen/_14sdp" android:height="@dimen/_14sdp" />
            <stroke android:width="@dimen/_5sdp" android:color="@color/color_trans" />
        </shape>
    </item>
</selector>