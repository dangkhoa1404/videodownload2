<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/_10sdp" />
                    <gradient android:angle="270" android:endColor="#D3D3D3" android:startColor="#DADADA" />
                </shape>
            </item>

            <item android:bottom="2dp" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="@color/color_state_pressed" />
                    <corners android:radius="@dimen/_10sdp" />

                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/_10sdp" />
                    <gradient android:angle="270" android:endColor="#D3D3D3" android:startColor="#DADADA" />
                </shape>
            </item>

            <item android:bottom="2dp" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="@dimen/_10sdp" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>